<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerDetailActivity"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="508dp"
        android:layout_height="302dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/weather_picture" />

    <TextView
        android:id="@+id/CityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="LONDON"
        android:textSize="32sp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/cityWeather"
        android:layout_width="58dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_wb_cloudy_24"
        app:layout_constraintEnd_toEndOf="@id/CityTextView"
        app:layout_constraintStart_toStartOf="@id/CityTextView"
        app:layout_constraintTop_toBottomOf="@+id/CityTextView" />

    <TextView
        android:id="@+id/CityTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="8Â° C | 90 % Hum | 5 mps Wind"
        android:textSize="28sp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="@id/cityWeather"
        app:layout_constraintStart_toStartOf="@id/cityWeather"
        app:layout_constraintTop_toBottomOf="@+id/cityWeather" />

    <ImageView
        android:id="@+id/imageView_2"
        android:layout_width="58dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_umbrella_24"
        app:layout_constraintEnd_toEndOf="@id/CityTextView2"
        app:layout_constraintStart_toStartOf="@id/CityTextView2"
        app:layout_constraintTop_toBottomOf="@+id/CityTextView2" />











</androidx.constraintlayout.widget.ConstraintLayout>